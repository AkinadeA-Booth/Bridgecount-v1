<div>
  <div>
    <h1>
      List of all companies
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new company
    </h2>

    <form action="/insert_company" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address">
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image">
      </div>

      <div>
        <label for="company_type_box">
          Company type
        </label>

        <input type="text" id="company_type_box" name="query_company_type">
      </div>

      <button class="btn btn-outline-primary">
        Create company
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1" class="table table-hover">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Address
        </th>

        <th>
          Image
        </th>

        <th>
          Company type
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_companies.each do |a_company| %>
      <tr>
        <td>
          <%= a_company.id %>
        </td>

        <td>
          <%= a_company.name %>
        </td>

        <td>
          <%= a_company.address %>
        </td>

        <td>
          <img src="<%= a_company.image %>">
        </td>

        <td>
          <%= a_company.company_type %>
        </td>

        <td>
          <%= time_ago_in_words(a_company.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_company.updated_at) %> ago
        </td>

        <td>
          <a href="/companies/<%= a_company.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
